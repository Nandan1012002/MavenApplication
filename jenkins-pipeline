#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('validate Maven Project') {
            steps {
                script {
                    sh 'mvn validate'
                }
            }
        }
        stage('Compile Maven Project') {
            steps {
                script {
                    sh 'mvn compile'
                }
            }
        }
        stage('Test Maven Project') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
        stage('Package Maven Project') {
            steps {
                script {
                    sh 'mvn package'
                }
            }
        }
        stage('Installation in Local') {
            steps {
                script {
                    sh 'mvn install'
                }
            }
        }
        stage('Deployment') {
            steps {
                script {
                    sh 'mvn deploy'
                }
            }
        }
    }
}
