pipeline {
    agent any
    stages {
        stage('Validate Maven Project') {
            steps {
                bat 'mvn validate'
            }
        }
        stage('Compile Maven Project') {
            steps {
                bat 'mvn compile'
            }
        }
        stage('Test Maven Project') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Package Maven Project') {
            steps {
                bat 'mvn package'
            }
        }
        stage('Install in Local Repository') {
            steps {
                bat 'mvn install'
            }
        }
        stage('Deploy') {
            steps {
                bat 'mvn deploy'
            }
        }
    }
}
