pipeline {
    agent {
        docker {
            image 'maven:3.8.5-jdk-21'
        }
    }
    stages {
        stage('Validate Maven Project') {
            steps {
                sh 'mvn validate'
            }
        }
        stage('Compile Maven Project') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test Maven Project') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package Maven Project') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Install in Local Repository') {
            steps {
                sh 'mvn install'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
}
